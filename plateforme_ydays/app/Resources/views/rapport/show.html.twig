{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rapport</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rapport.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ rapport.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ rapport.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if rapport.date %}{{ rapport.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rapport_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
