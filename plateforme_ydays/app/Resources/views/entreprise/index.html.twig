{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entreprises list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Numerovoie</th>
                <th>Voie</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Siret</th>
                <th>Type</th>
                <th>Domaine</th>
                <th>Secteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td><a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">{{ entreprise.id }}</a></td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.numeroVoie }}</td>
                <td>{{ entreprise.voie }}</td>
                <td>{{ entreprise.cp }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.siret }}</td>
                <td>{{ entreprise.type }}</td>
                <td>{{ entreprise.domaine }}</td>
                <td>{{ entreprise.secteur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entreprise_edit', { 'id': entreprise.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entreprise_new') }}">Create a new entreprise</a>
        </li>
    </ul>
{% endblock %}
